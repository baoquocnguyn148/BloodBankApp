<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập mạng và thông báo -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBankApp"
        tools:targetApi="31">

        <!-- ===================================================================== -->
        <!-- ACTIVITY KHỞI ĐỘNG (LAUNCHER) -->
        <!-- ===================================================================== -->
        <!-- HomeActivity là màn hình trung chuyển, kiểm tra session và điều hướng -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===================================================================== -->
        <!-- CÁC ACTIVITY XÁC THỰC -->
        <!-- ===================================================================== -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodBankApp.NoActionBar" />
        <!-- Đã loại bỏ launchMode="singleTask" không cần thiết -->

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <!-- ===================================================================== -->
        <!-- CÁC DASHBOARD CHÍNH THEO VAI TRÒ -->
        <!-- ===================================================================== -->
        <activity android:name=".activities.AdminDashboard" android:exported="false" />
        <activity android:name=".activities.DonorDashboard" android:exported="false" />
        <activity android:name=".activities.RecipientDashboard" android:exported="false" />
        <activity android:name=".activities.StaffDashboardActivity" android:exported="false" />
        <!-- ✅ ĐÃ THÊM StaffDashboardActivity -->
        <activity android:name=".activities.BloodBankDashboard" android:exported="false" />

        <!-- ===================================================================== -->
        <!-- CÁC ACTIVITY CHỨC NĂNG KHÁC -->
        <!-- ===================================================================== -->
        <activity android:name=".activities.EditProfileActivity" android:exported="false" />
        <activity android:name=".activities.ScheduleDonationActivity" android:exported="false" />
        <activity android:name=".activities.ViewRequestsActivity" android:exported="false" />
        <activity android:name=".activities.NotificationsActivity" android:exported="false" />
        <activity android:name=".activities.AddBloodRequestActivity" android:exported="false" />
        <activity android:name=".activities.DonorListActivity" android:exported="false" />
        <activity android:name=".activities.MyRequestsActivity" android:exported="false" />
        <activity android:name=".activities.ManageInventoryActivity" android:exported="false" />
        <activity android:name=".activities.ManageUsersActivity" android:exported="false" />

        <!-- ===================================================================== -->
        <!-- SERVICE CHO FIREBASE MESSAGING -->
        <!-- ===================================================================== -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
