<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
    Đặt màu nền cho button.
    Chúng ta sẽ sử dụng màu "primary_red" mà bạn đã định nghĩa trong colors.xml.
    -->
    <solid android:color="@color/primary_red" />

    <!--
    Bo tròn các góc của button.
    Bạn có thể thay đổi giá trị "8dp" để bo tròn nhiều hơn hoặc ít hơn.
    -->
    <corners android:radius="8dp" />

</shape>
