<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:gravity="center"
    tools:context=".activities.MyRequestsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_red"
        app:title="My Blood Requests"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ✅ SỬA LỖI 1: Đặt ID là rv_my_requests -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_my_request"/>

        <!-- ✅ SỬA LỖI 2: Đặt ID là tv_no_requests -->
        <TextView
            android:id="@+id/tv_no_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have not made any requests yet."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:visibility="gone"
            android:layout_gravity="center"
            tools:visibility="visible"/>

    </FrameLayout>

</LinearLayout>
