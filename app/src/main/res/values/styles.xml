<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ProfileLabel">
        <item name="android:layout_width">wrap_content</item> <!-- Sửa từ 0dp thành wrap_content -->
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_columnWeight">1</item> --> <!-- Xóa bỏ vì không còn dùng GridLayout -->
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ProfileValue">
        <item name="android:layout_width">wrap_content</item> <!-- Sửa từ 0dp thành wrap_content -->
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_columnWeight">1</item> --> <!-- Xóa bỏ vì không còn dùng GridLayout -->
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Styles cho Summary Cards -->
    <style name="SummaryCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item> <!-- Thay đổi để linh hoạt hơn -->
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="SummaryContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SummaryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SummaryValue" parent="SummaryTitle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SummaryDescription" parent="SummaryTitle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Styles cho Action Buttons -->
    <style name="ActionButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item> <!-- Thay đổi để linh hoạt hơn -->
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>
