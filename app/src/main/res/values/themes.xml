<?xml version="1.0" encoding="utf-8"?><resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ ĐÂY LÀ THEME CHÍNH VÀ DUY NHẤT CHO TOÀN BỘ ỨNG DỤNG -->
    <style name="Theme.BloodBankApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

    </style>

    <!-- Style phụ này có thể hữu ích, chúng ta giữ lại nó ở đây -->
    <style name="Theme.BloodBankApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ✅✅✅ THÊM STYLE CÒN THIẾU VÀO ĐÂY ✅✅✅ -->
    <style name="Widget.App.Button.Dashboard" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_dark_gray</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>
